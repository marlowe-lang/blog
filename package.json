{
  "dependencies": {
    "@swc/core": "^1.5.7",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.13",
    "@types/react": "^18.3.2",
    "concurrently": "^8.2.2",
    "next": "14.2.4",
    "next-themes": "^0.3.0",
    "nextjs": "^0.0.3",
    "nextra": "^2.13.4",
    "nextra-theme-blog": "^2.13.4",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-lightningcss": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.0.2"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "tsup",
    "build:all": "pnpm build && pnpm build:tailwind",
    "build:tailwind": "pnpm postcss theme/styles.css -o public/style.css --verbose",
    "clean": "rimraf ./dist ./style.css",
    "dev": "concurrently \"pnpm dev:layout\" \"pnpm dev:tailwind\" \"pnpm dev:next\"",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "TAILWIND_MODE=watch pnpm postcss theme/styles.css -o public/style.css --watch",
    "dev:next": "next dev",
    "prepublishOnly": "pnpm build:all",
    "test": "vitest run",
    "types": "tsup --dts-only",
    "types:check": "tsc --noEmit"
  },
  "exports": {
    "./style.css": "./public/style.css",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.mts"
    },
    "./tags": {
      "import": "./dist/tags.js",
      "types": "./dist/tags.d.mts"
    }
  }
}
